# Configures Nginx to act as reverse proxy to the application server

server {
    listen 80;
    server_name 18.234.253.121;
    # Configures Nginx proxy to requests to /airbnb-onepage to flask app running
    # at port 5000
    location = /airbnb-onepage/ {
        include proxy_params;
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    # Configures Nginx to proxy requests to /airbnb-dynamic/number_odd_or_even/(any integer)
    # to a gunicorn runnin at port 5001
    location ~ ^/airbnb-dynamic/number_odd_or_even/(\d+)$ {
        include proxy_params;
        proxy_pass http://127.0.0.1:5001/number_odd_or_even/$1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    # Configures Nginx to  proxy requests to /api
    # to a gunicorn runnin at port 5002
    location /api/ {
        include proxy_params;
        proxy_pass http://127.0.0.1:5002/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    # Configures Nginx to proxy request to /
    # to a gunicorn instance at port 5003
    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:5003/2-hbnb;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    location /static {
        alias /home/ubuntu/AirBnB_clone_v4/web_dynamic/static;
    }
}
