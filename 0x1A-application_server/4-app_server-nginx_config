# Configures Nginx to act as reverse proxy to the application server

server {
    listen 80;
    server_name 18.234.253.121;
    # Configures Nginx proxy requests to /airbnb-onepage to flask app running
    # at port 5000
    location = /airbnb-onepage/ {
        include proxy_params;
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    # Configures Nginx proxy requests to /airbnb-dynamic/number_odd_or_even/(any integer)
    # to a gunicorn runnin at port 5001
    location ~ ^/airbnb-dynamic/number_odd_or_even/(\d+)$ {
        include proxy_params;
        proxy_pass http://127.0.0.1:5001/number_odd_or_even/$1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
    # Configures Nginx proxy requests to /api
    # to a gunicorn runnin at port 5000
    location /api/v1/states {
        include proxy_params;
        proxy_pass http://127.0.0.1:5002/api/v1/states;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
